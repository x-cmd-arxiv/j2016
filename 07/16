utonomous thermal machines.\n","versions":[{"version":"v1","created":"Fri, 15 Jul 2016 17:33:02 GMT"},{"version":"v2","created":"Tue, 22 Nov 2016 23:49:07 GMT"},{"version":"v3","created":"Wed, 14 Jun 2017 21:00:50 GMT"},{"version":"v4","created":"Mon, 5 Nov 2018 00:22:20 GMT"}],"update_date":"2018-11-06"}
