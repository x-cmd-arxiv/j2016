ht reverse\nLog-Sobolev inequality.\n","versions":[{"version":"v1","created":"Tue, 13 Dec 2016 20:30:42 GMT"},{"version":"v2","created":"Sun, 18 Dec 2016 14:37:23 GMT"},{"version":"v3","created":"Sat, 27 May 2017 14:16:37 GMT"},{"version":"v4","created":"Wed, 5 Jul 2017 08:59:52 GMT"},{"version":"v5","created":"Tue, 10 Oct 2017 21:56:14 GMT"},{"version":"v6","created":"Fri, 29 Jun 2018 10:26:33 GMT"}],"update_date":"2018-07-02"}
